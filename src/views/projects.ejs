<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Projects By Dylan Tobia</title>
    <!--bower:css-->
    <link rel='stylesheet' href='/lib/bootstrap/dist/css/bootstrap.min.css' />
    <link rel='stylesheet' href='/lib/bootstrap/dist/css/bootstrap-theme.css' />
    <link rel='stylesheet' href='/lib/font-awesome/css/font-awesome.min.css' />
    <!--endbower-->
    <!--inject:css-->
    <link rel="stylesheet" href="/css/main.css">
    <!--endinject-->


    <link href='http://fonts.googleapis.com/css?family=Oswald:400,300,700' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=EB+Garamond' rel='stylesheet' type='text/css'>


</head>

<body data-spy="scroll" data-offset="0" data-target="#theMenu">

<!-- Menu -->
<nav class="menu" id="theMenu">
    <div class="menu-wrap">
        <h1 class="logo"><a href="/">Projects</a></h1>
        <i class="icon-remove menu-close"></i>
        <a href="\">Home</a>
        <a href="\about" class="smoothScroll">About</a>
        <a href="#projects" class="smoothScroll">Projects</a>
        <a href="\contact" class="smoothScroll">Contact</a>
    </div>

    <!-- Menu button -->
    <div id="menuToggle"><i id="toggleIcon" class="fa fa-caret-left"></i></div>
</nav>


<!-- ========== HEADER SECTION ========== -->
<section id="home" href="#home" class="smoothScroll"></section>
<div id="headerwrap">
    <div class="container">
        <br>
        <div class="row">
            <h1>Projects</h1>
            <br>
            <h3>Some of my Projects</h3>
            <div class="col-lg-6 col-lg-offset-3">
            </div>
        </div>
    </div><!-- /container -->
</div><!-- /headerwrap -->
<section id="projects" name="projects"></section>
<div id="f">
    <div class="container">
        <div class="row centered">
            <h3>SOME PROJECTS</h3>

            <div class="col-lg-6 col-lg-offset-3">
                <% for(var i = 0; i < projects.length; i++){ %>
                <h3><%= projects[i].name %></h3>
                <p><%= projects[i].desc %></p>
                <a href="/projects/<%=projects[i]._id%>">More Information</a><br />
                <a href="<%= projects[i].link %>" target="_blank">Github Repository</a> <br /> <br />
                <img class="<%=projects[i].fileName ? "projectImage" : "noImage"%>" src="<%=projects[i].fileName ? "/images/" + projects[i].fileName : "#" %>" />
                <br/>
                <% } %>

            </div><!-- col-lg-8 -->
        </div><!-- row -->
    </div><!-- container -->
</div>    <!-- f -->


